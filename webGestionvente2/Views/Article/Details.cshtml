@model webGestionvente2.Models.Article

@{
    ViewData["Title"] = "Details";
    var imgaepath = "~/img/" + (Model.imagepath ?? "noimage.jpg");
}

<h1><i class="fa fa-info-circle"></i> Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagepath)
        </dt>
        <dd class="col-sm-10">
            <div class="card-body text-left">
                <img src="@imgaepath" asp-append-version="true" height="500" width="500" />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie.categorieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nomArticle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nomArticle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.prix)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.instock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.instock)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index"><i class="fa fa-backward"> retour</i></a> 

</div>
